<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net461</TargetFrameworks>
    <OutputType>Library</OutputType>
    <EnableDefaultCompileItems>False</EnableDefaultCompileItems>
    <GenerateAssemblyInfo>False</GenerateAssemblyInfo>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <IsPackable>False</IsPackable>
  </PropertyGroup>

  <Import Project="..\..\build\Base.props" />
  <Import Project="..\..\build\Rx.props" />
  <Import Project="..\..\build\Avalonia.props" />

  <ItemGroup>
    <Compile Include="**\*.cs" Exclude="obj\**" />
  </ItemGroup>

  <Import Project="..\..\build\EmbedXaml.props" />

  <ItemGroup>
    <ProjectReference Include="..\..\src\Avalonia.Xaml.Interactions\Avalonia.Xaml.Interactions.csproj" />
    <ProjectReference Include="..\..\src\Avalonia.Xaml.Interactions.Custom\Avalonia.Xaml.Interactions.Custom.csproj" />
    <ProjectReference Include="..\..\src\Avalonia.Xaml.Interactivity\Avalonia.Xaml.Interactivity.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="App.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Controls\AdvancedControl.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Controls\CallMethodActionControl.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Controls\ChangePropertyActionControl.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Controls\CustomActionControl.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Controls\CustomBehaviorControl.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Controls\DataTriggerBehaviorControl.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Controls\EventTriggerBehaviorControl.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Controls\InvokeCommandActionControl.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Views\MainWindow.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
  </ItemGroup>

</Project>
