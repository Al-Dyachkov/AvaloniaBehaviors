<UserControl x:Class="BehaviorsTestApplication.Views.MainView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:pages="clr-namespace:BehaviorsTestApplication.Pages;assembly=BehaviorsTestApplication">
    <UserControl.Styles>
        <Style Selector="TabStripItem">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </UserControl.Styles>
    <TabControl>
        <TabItem Header="CallMethodAction">
            <pages:CallMethodActionControl/>
        </TabItem>
        <TabItem Header="ChangePropertyAction">
            <pages:ChangePropertyActionControl/>
        </TabItem>
        <TabItem Header="DataTriggerBehavior">
            <pages:DataTriggerBehaviorControl/>
        </TabItem>
        <TabItem Header="EventTriggerBehavior">
            <pages:EventTriggerBehaviorControl/>
        </TabItem>
        <TabItem Header="InvokeCommandAction">
            <pages:InvokeCommandActionControl/>
        </TabItem>
        <TabItem Header="CustomAction">
            <pages:CustomActionControl/>
        </TabItem>
        <TabItem Header="CustomBehavior">
            <pages:CustomBehaviorControl/>
        </TabItem>
        <TabItem Header="Advanced">
            <pages:AdvancedControl/>
        </TabItem>
    </TabControl>
</UserControl>
